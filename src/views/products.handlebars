<div class="container my-5">
    {{#if logo}}
    <div class="row d-flex justify-content-end">
        <div class="col-2">
            Bienvenido {{logo}} Rol:{{rol}}
        </div>
    </div>
    <div class="row d-flex justify-content-end text-decoration-underline">
        <div class="col-2">
           <a href="http://localhost:8080/logout"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                <path fill-rule="evenodd"
                    d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
            </svg> Cerrar Sesion</a>
        </div>
    </div>
    {{/if}}
    <div class="row">
        {{#each showProducts.docs}}
        <div class="col my-3">
            <div class="card" style="width: 18rem;">
                <img src={{this.thumbnails}} class="card-img-top" alt={{this.title}}>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="my-4">Precio x Und: <b>{{this.price}}</b></p>
                    <p class="my-3">Categoria: {{this.category}}</p>
                    <p><button type="button" class="btn btn-info bbtt" id={{this._id}}>Agregar al Carrito</button></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row my-5">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item {{#if showProducts.hasPrevPage}}{{else}}disabled{{/if}}">
                    <a class="page-link" href="http://{{showProducts.prevLink}}">Previous</a>
                </li>

                <li class="page-item {{#if showProducts.hasNextPage}}{{else}}disabled{{/if}}">
                    <a class="page-link" href="http://{{showProducts.nextLink}}">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="../public/js/productView.js"></script>