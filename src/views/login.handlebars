<div class="container m-5 p-5" >
    <div class="row d-flex justify-content-center my-2 text-center">
    <form action="http://localhost:8080/login" method="post" class="border col-8 form-color">
        <div class="row d-flex justify-content-center my-2 text-center">
        <h3>Inicia Sesion</h3>
        </div>
    <div class="row d-flex justify-content-center my-2">

        <div class="form-floating mb-3 col-md-8">
            <input type="email" class="form-control" id="userEmail" name="userEmail" placeholder="name@example.com">
            <label for="floatingInput">Email</label>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="form-floating col-md-8">
            <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
    </div>
    {{#if msg}}
     <div class="row my-5 d-flex justify-content-center">
        <div class="col-md-8">
            <p class="fw-bolder text-success">{{msg}}</p>
        </div>
    </div>
    {{/if}}
    <div class="row my-5 d-flex justify-content-center">
        <div class="col-md-8">
            <button class="btn btn-primary" type="submit">Ingresar</button>
            <a href="http://localhost:8080/registro"><button class="btn btn-primary" type="button">Registrarse</button></a>
        </div>
    </div>

    </form>
</div>
</div>